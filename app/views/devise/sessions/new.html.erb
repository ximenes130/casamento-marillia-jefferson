<div class="background" style="background: url(<%= image_path 'love-bg.jpeg'%>) no-repeat fixed center center/cover;"></div>
<div>
  <div class="section"></div>
  <center>
    <div class="section"></div>
    <div class="container">
      <div class="z-depth-1 card row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
        <h5 class="">Painel de administração</h5>
        <p>Favor logar para continuar</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class='row'>
            <div class='col s12'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'validate' %>
              <label for='user_email'>Email</label>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'>
              <%= f.password_field :password, autocomplete: "current-password", class:'validate' %>
              <label for='user_password'>Senha</label>
            </div>
          </div>

          <br />
          <center>
            <div class='row'>
              <button class="col s12 btn waves-effect waves-light white-text" type="submit" name="action">fazer login</button>
            </div>
          </center>
        <% end %>
      </div>
    </div>
  </center>
</div>
